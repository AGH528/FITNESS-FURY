<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Logs</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>VIEW LOGS</h1>
    <a href="/challenges" class="btn">BACK TO CHALLENGES</a>
  </header>

  <main>
    <% if (logs && logs.length > 0) { %>
      <ul>
        <% logs.forEach(function(log) { %>
          <li>
            <p><strong>Activity:</strong> <%= log.activity %></p>
            <p><strong>Date:</strong> <%= new Date(log.date).toLocaleDateString() %></p>
            <p><strong>Duration:</strong> <%= log.duration %> minutes</p>
            <% if (log.caloriesBurned) { %>
              <p><strong>Calories Burned:</strong> <%= log.caloriesBurned %></p>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No logs available for this challenge.</p>
    <% } %>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> FITNESS FURY. ALL RIGHTS RESERVED.</p>
  </footer>
</body>
</html>
